# =============================================================================
# RetreatFlow360 Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values
# Never commit .env to version control

# -----------------------------------------------------------------------------
# Cloudflare Configuration
# -----------------------------------------------------------------------------
CLOUDFLARE_API_TOKEN=your_api_token
CLOUDFLARE_ACCOUNT_ID=your_account_id

# D1 Database (set in wrangler.toml, shown here for reference)
# D1_DATABASE_NAME=retreatflow360-db

# KV Namespaces (set in wrangler.toml)
# KV_SESSIONS=sessions
# KV_CACHE=cache

# R2 Buckets (set in wrangler.toml)
# R2_BUCKET=retreatflow360-uploads

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
JWT_SECRET=your_jwt_secret_min_32_chars_long_here
JWT_ISSUER=retreatflow360.dev

# Microsoft OAuth (for corporate SSO)
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_TENANT_ID=common

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# -----------------------------------------------------------------------------
# Payment Providers
# -----------------------------------------------------------------------------
# Stripe (primary payment processor)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# PayPal
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_MODE=sandbox

# GoCardless (direct debit)
GOCARDLESS_ACCESS_TOKEN=
GOCARDLESS_ENVIRONMENT=sandbox

# -----------------------------------------------------------------------------
# Email
# -----------------------------------------------------------------------------
RESEND_API_KEY=re_...
EMAIL_FROM_ADDRESS=noreply@retreatflow360.com
EMAIL_FROM_NAME=RetreatFlow360

# -----------------------------------------------------------------------------
# AI Services
# -----------------------------------------------------------------------------
# Workers AI is built-in via Cloudflare binding
# AI_GATEWAY_ACCOUNT_TAG is set in wrangler.toml

# OpenAI (optional fallback)
OPENAI_API_KEY=

# -----------------------------------------------------------------------------
# Bot Protection
# -----------------------------------------------------------------------------
TURNSTILE_SITE_KEY=
TURNSTILE_SECRET_KEY=

# -----------------------------------------------------------------------------
# SMS (Twilio - for critical notifications)
# -----------------------------------------------------------------------------
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# -----------------------------------------------------------------------------
# Application URLs
# -----------------------------------------------------------------------------
# Development
APP_URL_ATTENDEE=http://localhost:5173
APP_URL_OWNER=http://localhost:5174
APP_URL_ADMIN=http://localhost:5175
API_URL=http://localhost:8787

# Staging (override in .env.staging)
# APP_URL_ATTENDEE=https://staging.retreatflow360.com
# APP_URL_OWNER=https://owner.staging.retreatflow360.com
# APP_URL_ADMIN=https://admin.staging.retreatflow360.com
# API_URL=https://api.staging.retreatflow360.com

# Production (override in .env.production)
# APP_URL_ATTENDEE=https://retreatflow360.com
# APP_URL_OWNER=https://owner.retreatflow360.com
# APP_URL_ADMIN=https://admin.retreatflow360.com
# API_URL=https://api.retreatflow360.com

# -----------------------------------------------------------------------------
# Feature Flags (defaults)
# -----------------------------------------------------------------------------
FEATURE_AI_ENABLED=true
FEATURE_PAYMENTS_ENABLED=true
FEATURE_VIDEO_UPLOAD_ENABLED=false
FEATURE_WAITLIST_ENABLED=true

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_AI_REQUESTS_PER_MINUTE=50

# -----------------------------------------------------------------------------
# Monitoring & Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=info
SENTRY_DSN=
